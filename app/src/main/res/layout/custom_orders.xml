<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="1dp"
    android:id="@+id/card">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ListIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:layout_alignBottom="@+id/ListNombre" />
        <TextView
            android:id="@+id/ListText"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="right"
            android:text="FECHA:"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView13" />
        <TextView
            android:id="@+id/ListFecha"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="Fecha"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ListText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:text="CLIENTE"
            android:id="@+id/textView13"
            android:layout_below="@+id/ListText"
            android:layout_toEndOf="@+id/ListIcon"
            android:layout_above="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="Medium Text"
            android:id="@+id/ListUsuario"
            android:layout_below="@+id/ListText"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ListNombre"
            android:layout_alignStart="@+id/ListFecha" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="CANTIDAD: "
            android:id="@+id/ListNombre"
            android:gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/ListIcon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CONT"
            android:id="@+id/ListCantidad"
            android:gravity="left"
            android:layout_alignBottom="@+id/ListIcon"
            android:layout_toEndOf="@+id/ListNombre"
            android:layout_alignParentEnd="@+id/ListDescuent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="  DESCUENTO: "
            android:id="@+id/ListDescuent"
            android:gravity="left"
            android:layout_alignBottom="@+id/ListDescuento"
            android:layout_toEndOf="@+id/ListCantidad" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DESC"
            android:id="@+id/ListDescuento"
            android:gravity="left"
            android:layout_alignBottom="@+id/ListIcon"
            android:layout_toEndOf="@+id/ListDescuent"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:text="TAMAÑO"
            android:id="@+id/textView14"
            android:layout_below="@+id/ListUsuario"
            android:layout_toEndOf="@+id/ListIcon"
            android:layout_above="@+id/ListNombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="Large Text"
            android:id="@+id/txttamaño"
            android:layout_below="@+id/ListUsuario"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView14"
            android:layout_above="@+id/ListNombre" />


    </RelativeLayout>
</android.support.v7.widget.CardView>