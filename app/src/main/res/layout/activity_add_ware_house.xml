<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.sads.mielera.AddWareHouse"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NUEVO PRODUCTO EN ALMACEN"
            android:gravity="center"
            android:id="@+id/textView7" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FECHA DE INGRESO:"
            android:id="@+id/textView8" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.sads.mielera.New_Orders">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/FECHA" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="... "
                android:id="@+id/BTNFECHA"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/txtdate"
                android:layout_alignParentStart="true"
                android:layout_marginStart="280dp" />
        </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CANTIDAD TOTAL EN ALMACEN:"
                android:id="@+id/textView9"
                android:gravity="center"
              />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/txtquantity"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/textView10" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PRODUCTO"
            android:gravity="center"
            android:id="@+id/textView12" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR PRODUCTO A LA BODEGA"
            android:id="@+id/btnWareHouse" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR PEDIDO"
            android:id="@+id/btncancelar" />

    </LinearLayout>

</ScrollView>
